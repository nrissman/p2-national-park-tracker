{% block content %}

<div class="card md-4 shadow">
    <div class="card-body">
        <p>{{ comment.note }}</p>
        <div class="d-flex justify-content-between">
            <small>author: {{ username }}</small>
            <form action="/comments/delete/{{park._id}}/{{comment._id}}?_method=DELETE" method="POST">
                <input type="submit" value="X"/> 

            </form>
        </div>
    </div>
</div>
<div class="btn-group">

        <a href="/parks/{{park}}/edit" class="btn btn-primary">Edit Park</a>
        <form action="/parks/{{park._id}}?_method=DELETE" method="POST">
            <input type="submit" value="Remove Park" class="btn btn-danger">
        </form>
{% endblock %}

